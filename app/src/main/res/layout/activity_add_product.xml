<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".AddProduct">

    <!-- TÃ­tulo -->

    <!-- Campo Nombre Producto -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/btn_my_bag"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_bag" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexend_bold"
                android:paddingStart="8dp"
                android:text="My bag"
                android:textColor="#4CAF50"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_history"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_history" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexend_bold"
                android:paddingStart="8dp"
                android:text="History"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="ADD PRODUCT"
        android:fontFamily="@font/lexend_bold"
        android:textAlignment="center"
        android:textColor="@color/titleColor"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.101"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="67dp" />

    <TextView
        android:id="@+id/textCategory5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Product name"
        android:fontFamily="@font/lexend_bold"
        android:textColor="@color/textColor"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@+id/textAdd"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="39dp" />

    <TextView
        android:id="@+id/textCategory7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Estimated price (opcional)"
        android:fontFamily="@font/lexend_bold"
        android:textColor="@color/textColor"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.221"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText2"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Quantity"
        android:fontFamily="@font/lexend_bold"
        android:textColor="@color/textColor"
        android:textSize="18dp"
        app:layout_constraintEnd_toStartOf="@+id/textCategory8"
        app:layout_constraintHorizontal_bias="0.267"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textCategory8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="156dp"
        android:text="Unit"
        android:fontFamily="@font/lexend_bold"
        android:textColor="@color/textColor"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editText2"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginStart="28dp"
        android:backgroundTint="@color/inputBackground"
        android:hint="Ej: $5"
        android:fontFamily="@font/lexend_bold"
        android:paddingHorizontal="16dp"
        android:textSize="18dp"
        android:textColor="@color/inputTextColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textCategory"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editText3"
        android:layout_width="335dp"
        android:layout_height="39dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="@color/inputBackground"
        android:hint="Ej: $5"
        android:fontFamily="@font/lexend_bold"
        android:paddingHorizontal="16dp"
        android:textSize="18dp"
        android:textColor="@color/inputTextColor"
        app:layout_constraintTop_toBottomOf="@+id/textCategory7"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="29dp" />

    <Switch
        android:id="@+id/switchWeekly"
        android:layout_width="347dp"
        android:layout_height="27dp"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="16dp"
        android:text="Add each week?"
        android:textColor="@color/textColor"
        android:fontFamily="@font/lexend_bold"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText3" />

    <Button
        android:id="@+id/buttonSave"
        android:layout_width="137dp"
        android:layout_height="47dp"
        android:layout_marginEnd="48dp"
        android:layout_weight="1"
        android:backgroundTint="@color/buttonSaveColor"
        android:text="Save"
        android:fontFamily="@font/lexend_bold"
        android:textColor="@color/buttonTextColor"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="562dp" />

    <Button
        android:id="@+id/buttonCancel"
        android:layout_width="130dp"
        android:layout_height="45dp"
        android:layout_weight="1"
        android:backgroundTint="@color/buttonCancelColor"
        android:text="Cancel"
        android:fontFamily="@font/lexend_bold"
        android:textColor="@color/inputTextColor"
        android:textSize="18dp"
        app:layout_constraintEnd_toStartOf="@+id/buttonSave"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="562dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/switchWeekly"
        android:paddingHorizontal="16dp">

    </LinearLayout>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/productName"
        android:layout_width="327dp"
        android:layout_height="39dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="@color/inputBackground"
        android:hint="Ej: Apple"
        android:fontFamily="@font/lexend_bold"
        android:textSize="18dp"
        android:textColor="@color/inputTextColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.464"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textCategory5"
        tools:ignore="MissingConstraints" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="328dp"
        android:layout_height="39dp"
        android:textSize="18dp"
        android:fontFamily="@font/lexend_bold"
        app:layout_constraintTop_toBottomOf="@+id/textCategory6"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="39dp" />

    <TextView
        android:id="@+id/textCategory6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Category"
        android:fontFamily="@font/lexend_bold"
        android:textColor="@color/textColor"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.115"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/productName"
        tools:ignore="MissingConstraints" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="151dp"
        android:layout_height="36dp"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@+id/textCategory8"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="217dp" />


</androidx.constraintlayout.widget.ConstraintLayout>